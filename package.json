{
  "name": "pino-connector-core",
  "version": "0.2.0",
  "description": "Connector core for Pino.",
  "keywords": [
    "pino",
    "logging",
    "connector"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=18"
  },
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "bench": "tsx benchmarks/connector.ts",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "release": "node scripts/release.mjs",
    "release:dry": "pnpm run build && pnpm publish --dry-run"
  },
  "dependencies": {
    "pino": "^9.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/node": "^20.14.10",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.9.0",
    "prettier": "^3.3.2",
    "tsup": "^8.1.0",
    "tsx": "^4.20.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.44.1",
    "vitest": "^1.6.0",
    "tinybench": "^2.8.0"
  },
  "packageManager": "pnpm@9.9.0",
  "release": {
    "scripts": {
      "beforePrepare": [
        "pnpm run lint",
        "pnpm run typecheck",
        "pnpm run test",
        "pnpm run coverage"
      ],
      "prepare": "pnpm run build",
      "beforePublish": "pnpm run release:dry"
    },
    "changelogFile": "CHANGELOG.md",
    "tagPrefix": "v",
    "commitMessage": "chore(release): {version}"
  }
}
